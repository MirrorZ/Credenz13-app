<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F6FB"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Roboliga" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="The RoboLIGA is back with more breath taking action, as the bots face off in their soccer matches. Each with only one target: The Honor and Glory of the League Title!"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textView1"
                android:layout_marginTop="12dp"
                android:src="@drawable/format" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/imageView1"
                android:layout_marginTop="12dp"
                android:text="Team: 1-3 members\nRegistration Fee: Rs. 200 (Non IEEE)	Rs. 160 (IEEE) (Rs. 150 for Re-Registration)\n\n1. Max dimensions of BOT: 30*30*30 cm\n2. Max Weight: 3.5 kg\n3. Power Specs:\ni.   Max Current: 5A\nii.  Max voltage: 12V (normal operation)\niii. Momentary Surge Load(spike): 18V\n4. The bot cannot split into independent parts\n5. No weapons of any type should be attached to the bot\n6. Any number of ACTUATORS may be used.\n7. Each match has 2 halves of 4 minutes with a 30 second maintenance break.\n8. Fields are subject to change after elimination rounds. Check website for details\n9. The organisers reserve the right to modify the field, rules and any other aspects of event without any prior notice\n\nMore details: www.credenz.info/roboliga.php"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textView2"
                android:layout_marginTop="12dp"
                android:src="@drawable/jc" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/imageView2"
                android:layout_marginTop="12dp"
                android:text="1. Goals from behind half line: 60 points\n2. Goals from outside inner circle: 40 points\n3. Goals from within inner circle: 20 points\n4. Negative points for fouls and yellow cards\n5. Disqualification on red card"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/imageView3"
                android:layout_marginTop="12dp"
                android:text="Abhinav Kaul:\nP: (+91) 9890972970\nPrerit Auti:\nP: (+91) 7507979117\nEmail: roboliga@credenz.info
                "
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textView3"
                android:layout_marginTop="12dp"
                android:src="@drawable/contact" />

        	<ImageButton 
        	    android:id="@+id/reg_button" android:layout_width="wrap_content" android:layout_height="wrap_content" 
        	    android:layout_alignParentBottom="true" 
        	    android:layout_centerHorizontal="true" 
        	    android:padding="0dp" 
        	    android:paddingBottom="0dp" 
        	    android:paddingLeft="0dp" 
        	    android:paddingRight="0dp" 
        	    android:paddingTop="0dp" 
        	    android:layout_marginTop="14dp"
        	    android:layout_below="@+id/textView4"
        	    android:background="@null"
        	    android:src="@drawable/reg_button" />
        </RelativeLayout>

    </ScrollView>

    

</RelativeLayout>
