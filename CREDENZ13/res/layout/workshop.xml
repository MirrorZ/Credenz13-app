<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F6FB"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PaperPresentation" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="3D Game Designing Workshop"
                android:textSize="20sp"
                android:textStyle="bold" />
            
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView1"
                android:text="\n- Introduction to Game Designing\n- Introduction to Maya\n- Creating Game Assets in Maya\n- Introduction to Unity 3D\n- Introduction to Scripting\n\nParticipation Details:\nRegistration fee(Individual): Rs.1100"
                android:textSize="14sp"
                android:textStyle="bold" />
            
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView2"
                android:layout_marginTop="12dp"
                android:text="Robotics Workshop"
                android:textSize="20sp"
                android:textStyle="bold" />
            
            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView3"
                android:text="\nIn this workshop you will be able to learn the fundamentals of designing and building autonomous robots by integrating a microcontroller; thus adding a brain to the robot. Five kinds of robots will be introduced – Line follower, edge detector, mobile operated, obstacle detector and line follower robots.\n- Introduction to Robotics\n- Microcontroller Programming\n\nPractical Session – 1\n- Sensors\n- Motors and its Drivers\n\nPractical Session – 2\n\nParticipation Details:\nIndividual: Rs.800/-(without kit) and Rs. 2700/- (with kit).\nGroup (Max 4 members in a group): Rs.4000/-"
                android:textSize="14sp"
                android:textStyle="bold" />
            

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/imageView1"
                android:layout_marginTop="14dp"
                android:text="Bhushan Charkha:\nP: (+91) 9890670728\nArpit Khandelwal:\nP: (+91) 7588643906\nEmail: workshop@credenz.info"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textView4"
                android:layout_marginTop="12dp"
                android:src="@drawable/contact" />

            <ImageButton
                android:id="@+id/reg_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView5"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:padding="0dp"
                android:paddingBottom="0dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingTop="0dp"
                android:background="@null"
                android:src="@drawable/reg_button" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
