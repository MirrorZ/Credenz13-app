<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F6FB"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Software_dev" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="Software Development will be an Application Development Competition with no restriction on the choice of programming language used. You can use ANY existing programming language(s) to make your application. The application will be judged by experts in the software industry. You do not need to be present in the PICT Campus during the length of this contest. You can (obviously) use the internet for research and development."
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textView1"
                android:layout_marginTop="12dp"
                android:src="@drawable/format" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/imageView1"
                android:layout_marginTop="12dp"
                android:text="Team :Maximum 3 members\nRegisteration fee :Rs.180 (IEEE members)\n                         Rs. 200(Non-IEEE members).\n\n1.Time period for Development: Approximately 20 Days.\n2.Software must include basic features listed in the problem statement\n3.The abstract for the concerned application must be submitted latest by 24th August 2013 23:59:59.\n4.Selected participants to showcase their software on 01.09.13 during the event in PICT campus.\n\nProblem Statement:\n\nCross Continent is a reputed multinational software company with a branch in India. The President of the company will be visiting the Indian branch on 31st March. As of today, 29th March, the company does not have an Annual Report of the previous year. They require an ‘Annual Report Generator’ which makes a brief slideshow highlighting progress of the financial year 2012 with input given in the text format. The company will offer a generous amount for this software.\nList of mandatory features to be included:\n1. A common template to be used throughout the presentation.\n2. It should generate a progress graph/bar chart depicting the details of sales, shares, profits.\n3. The software should include a choice of templates to be used for the presentation.\nThe developer is free to use additional features relevant to the requirements of the company which will lead to a bonus on the amount the company promises to pay.\n\nFor details visit :http://www.credenz.info/appdevel.php"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textView2"
                android:layout_marginTop="12dp"
                android:src="@drawable/jc" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/imageView2"
                android:layout_marginTop="12dp"
                android:text="1.User Interface.\n2.User friendliness.\n3.Deployment Scenarios.\n4.Presentability.\n5.Scenario Adaptability.\n6.Feature Richness.\n7.Innovation\nAnd a few more."
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/imageView3"
                android:layout_marginTop="12dp"
                android:text="Rutuja Shah\nP: (+91) 8149102148\nChandrika Parimoo\nP: (+91) 9975462154\nEmail:softwaredev@credenz.info"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textView3"
                android:layout_marginTop="12dp"
                android:src="@drawable/contact" />

            <ImageButton
                android:id="@+id/reg_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView4"
                android:layout_centerHorizontal="true"
                android:padding="0dp"
                android:paddingBottom="0dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingTop="0dp"
                android:background="@null"
                android:src="@drawable/reg_button" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
